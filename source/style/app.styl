[data-atoms="app"], html
  font-family: "Open Sans", "Helvetica Neue", "Helvetica", "Arial", sans-serif
  font-weight: FONT_WEIGHT_THIN
  font-size: 16px
  background: darken(DARK, 100%)

[data-atoms=app]
  [data-organism=article][data-extend=item]
    > section

      > .glass
        text-align: center
        > label
          display: block

      h1
        font-size: 1.05rem !important
        text-shadow 0 1px WHITE
      h2
        font-size: FONT_SIZE_TINY
      > h6
        text-align: justify
      > div
        width: auto
        text-align: justify
        font-size: FONT_SIZE_SMALL

